<div class="panel panel-default">
  <div class="panel-heading text-center">Perfil</div>
  <div id="painel_body" class="paine-body">
    <div class="row">
            <div class="col-md-6">
              <p><span class="glyphicon glyphicon-user" aria-hidden="true"></span> <strong>Nome</strong></p>
              
              <ul class="list-group">
                <li class="list-group-item"><%= @user.name %></li>
              </ul>
            </div>
      </div>
      
      <div class="row">
            <div class="col-md-6">
              <p><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> <strong>Email</strong></p>
              <ul class="list-group">
                <li class="list-group-item"><%= @user.email %></li>
              </ul>
            </div>
      </div>
      <div class="text-center" id="buttons_show">
        <div class="row">
          <div class="col-md-6">
            <div class="pull-right">
              <div class="text-center"> <%= link_to 'Editar', edit_user_path(@user.id), {:style=>'color:black;', :class => "btn btn-default"} %> </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="pull-left">
              <div class="text-center"> <%= link_to 'Voltar', users_path,  {:style=>'color:black;', :class => "btn btn-default"} %> </div>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>