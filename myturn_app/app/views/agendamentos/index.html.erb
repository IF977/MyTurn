<div class="panel panel-default">
  <div class="panel-heading" id="painel_list"><div class="text-center"><h1>Consulta de Agendamentos</h1></div></div>
    <div id="painel_body" class="paine-body">
      <table class="table table-hover">
            <thead>
              <tr>
                <th>
                   <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                     Usuário
                </th>
                <th>
                   <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
                   Chapa
                </th>
                <th>
                  <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
                  Data
                  </th>
                  <th>
                  <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
                  Tempo de Entrega
                  </th>
                <th>
                  <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
                  Paletização
                  </th>
                <th>
                  <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
                  Armazenamento
                </th>
                <th>
                  <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
                  Fornecedor
                </th>
                <th colspan="7"></th>
              </tr>
            </thead>
          
      
            <tbody>
              <% @agendamentos.each do |agendamento| %>
                <tr>
                  <td><%= agendamento.user_id %></td>
                  <td><%= agendamento.Qtd_Trabalhadores %></td>
                  <td><%= agendamento.Data %></td>
                  <td><%= agendamento.TempoEntrega %></td>
                  <td><%= agendamento.Paletizacao %></td>
                  <td><%= agendamento.ID_TipoArmazenamento %></td>
                  <td><%= agendamento.ID_Fornecedor %></td>
                  <td><%= link_to 'Mostrar', agendamento %>
                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                  </td>
                  <td><%= link_to 'Editar', edit_agendamento_path(agendamento) %>
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  </td>
                  <td><%= link_to 'Deletar', agendamento, method: :delete, data: { confirm: 'Você tem certeza?' } %>
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                  </td>
                </tr>
              <% end %>
            </tbody>
      </table>
    </div>
  </div>
</div>
<br>

<div class="text-center"><%= link_to 'Fazer Novo Agendamento', new_agendamento_path ,  {:style=>'color:black;', :class => "btn btn-default"} %> </div>
