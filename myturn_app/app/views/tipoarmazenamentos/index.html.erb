<div class="panel panel-default">
  <div class="panel-heading" id="painel_list"><div class="text-center"><h1>Consulta de Tipos de Armazenamento</h1></div></div>
    <div id="painel_body" class="paine-body">

      <table>
        <thead>
          <tr>
            <div class="col-md-3">
            <th>
              <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
              Descrição
            </th>
            </div>
          </tr>
        </thead>
      

        <tbody>
          <% @tipoarmazenamentos.each do |tipoarmazenamento| %>
            <tr>
              <td><%= tipoarmazenamento.descricao %></td>
              <td><%= link_to 'Show', tipoarmazenamento %>
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
              </td>
              <td><%= link_to 'Editar', edit_tipoarmazenamento_path(tipoarmazenamento) %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              </td>
              <td><%= link_to 'Deletar', tipoarmazenamento, method: :delete, data: { confirm: 'Are you sure?' } %>
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<br>

<div class="text-center"><%= link_to 'Criar Tipo de Armazenamento', new_tipoarmazenamento_path, {:style=>'color:black;', :class => "btn btn-default"} %> </div>
    
