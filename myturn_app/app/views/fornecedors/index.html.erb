<div class="panel panel-default">
  <div class="panel-heading" id="painel_list"><div class="text-center">Consulta de Fornecedores</div></div>
    <div id="painel_body" class="paine-body">

    <h1>Consulta de Fornecedores</h1>
    
    <table>
      <thead>
        <tr>
          <div class="row">
            <div class="col-md-0">
              <th>
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                Razão social
              </th>
            </div>
          </div>  
          <div class="col-md-0">
            <th>
              <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
              CNPJ
            </th>
          </div>
        </tr>
      </thead>
    
      <tbody>
        <% @fornecedors.each do |fornecedor| %>
          <tr>
            <td><%= fornecedor.razaosocial %></td>
            <td><%= fornecedor.CNPJ %></td>
            <td><%= link_to 'Show', fornecedor %></td>
            <td><%= link_to 'Edit', edit_fornecedor_path(fornecedor) %></td>
            <td><%= link_to 'Destroy', fornecedor, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

