<div class="panel panel-default">
  <div class="panel-heading" id="painel_list"><div class="text-center"><h1>Consulta de Fornecedores</h1></div></div>
    <div id="painel_body" class="paine-body">

    
    
    <table>
      <thead>
        <tr>
          <div class="row">
            <div class="col-md-3">
              <th>
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                Razão social
              </th>
            </div>
          </div>  
          <div class="col-md-3">
            <th>
              <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
              CNPJ
            </th>
          </div>
        </tr>
      </thead>
    
      <tbody>
        <% @fornecedors.each do |fornecedor| %>
          <tr>
            <td><%= fornecedor.razaosocial %></td>
            <td><%= fornecedor.CNPJ %></td>
            <td><%= link_to 'Mostrar', fornecedor %>
              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            </td>
            <td><%= link_to 'Editar', edit_fornecedor_path(fornecedor) %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </td>
            <td><%= link_to 'Deletar', fornecedor, method: :delete, data: { confirm: 'Você tem certeza?' } %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<div class="text-center"><%= link_to 'Novo Fornecedor', new_fornecedor_path,  {:style=>'color:black;', :class => "btn btn-default"} %> </div>
